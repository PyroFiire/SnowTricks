{% extends 'base.html.twig' %}

{% block title %}Login{% endblock title %}

{% block body %}
    <div class="container">
        <h1>Login</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {{ form_start(formLogin, {'attr': {'novalidate': 'novalidate'}}) }}
            {{form_row(formLogin.username, {'full_name':'_username', 'attr': {'value': last_username }})}}
            {{form_row(formLogin.password, {'full_name':'_password'})}}
            <button type="submit" class="btn btn-primary">Login</button>
        {{ form_end(formLogin) }}
        <a href="{{ path('user_registration') }}">Register</a>
        <a href="#">Forgot password ?</a>
    </div>
{% endblock body %}
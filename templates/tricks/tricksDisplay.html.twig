{% for trick in tricks %}
    <div class="div-card col-12 col-md-6 col-lg-6 col-xl-3">
        <div class="card">
            <a href="{{ path('trick_show', {'slug':trick.slug}) }}">
                {% if trick.spotlightPicturePath %}
                    <img class="card-img-top" src="{{ 'picture/medias/' ~ trick.spotlightPicturePath }}"  alt="{{ trick.title}}">
                {% else %}
                    <img class="card-img-top" src="picture/defaultSpotlightPicture.jpg" alt="{{ trick.title}}">
                {% endif %}
            </a>
            <div class="card-body d-flex flex-row justify-content-between">
                <a href="{{ path('trick_show', {'slug':trick.slug}) }}" class="h4 card-title text-truncate" title="{{ trick.title }}">{{ trick.title }}</a>
                {% if app.user %}
                    <div class="d-flex flex-row">
                        <a href="{{ path('trick_edit', {'slug':trick.slug}) }}" class"card-link" style="margin-right:15px">
                            <i class="fas fa-pencil-alt fa-2x"></i>
                        </a>
                        <a href="delete" class"card-link" data-toggle="modal" data-target="#modalDeleteTrick" data-title="{{trick.title}}" data-slug="{{trick.slug}}">
                            <i class="fas fa-trash-alt fa-2x"></i>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endfor %}
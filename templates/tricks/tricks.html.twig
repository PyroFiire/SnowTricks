{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}
{% block stylesheets %}<link href={{ asset('css/tricks.css') }} type="text/css" rel="stylesheet">{% endblock %}

{% block body %}
    <div id="div_main__image">
        <img id="main_image" src={{ asset('picture/snowboarding-3554x1999.jpg')}}  alt="SnowTrick">
        <h1>Life is Snowboard</h1>
        <a id="downToTricks" href="#tricks" class="btn btn-outline-primary">
            <i class="fas fa-arrow-down fa-4x"></i>
        </a>
    </div>
    <div id="tricks" class="container-fluid">
        <div class="row">
            {{ include('tricks/tricksDisplay.html.twig') }}
        </div>
        <div id="divLoadMore">
            <a id="loadMore" href="{{ path('trick_loadMore')}}" class="btn btn-outline-primary">
                <i class="fas fa-spinner fa-2x"> Load More</i>
            </a>
        </div>
        <a id="upToTricks" href="#tricks" class="btn btn-outline-primary">
            <i class="fas fa-arrow-up fa-4x"></i>
        </a>
    </div>
    {{ include('tricks/modalDeleteTrick.html.twig') }}
{% endblock body %}

{% block javascripts %}
    <script src={{ asset('js/modalDeleteTrick.js')}}></script>
    <script src={{ asset('js/buttonsToTricks.js')}}></script>
    <script src={{ asset('js/ajax/loadMoreTricks.js')}}></script>
{% endblock javascripts %}

{% extends 'base.html.twig' %}

{% block title %}SnowTricks{% endblock %}

{% block body %}
    <h1>Bienvenue sur le site SnowTricks</h1>

    <div class="container-fluid">
        <div class="row">
            {% for trick in tricks %}
                <div class="col-12 col-md-6 col-lg-4 col-xl-3" style="padding:10px;">
                    <div class="card">
                    <a href="{{ path('trick_show', {'title':trick.title|replace({' ':"_"})}) }}"><img class="card-img-top" src="https://via.placeholder.com/300x200"  alt="..."></a>
                        <div class="card-body d-flex flex-row justify-content-between">
                            <a href="{{ path('trick_show', {'title':trick.title|replace({' ':"_"})}) }}" class="h4 card-title text-truncate">{{ trick.title }}</a>
                            <div class="d-flex flex-row">
                                <a href="#" class"card-link" style="margin-right:15px">
                                    <i class="fas fa-pencil-alt fa-2x"></i>
                                </a>
                                <a href="#" class"card-link">
                                    <i class="fas fa-trash-alt fa-2x"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
